# - IPv6
set_real_ip_from 2400:cb00::/32;
set_real_ip_from 2606:4700::/32;
set_real_ip_from 2803:f800::/32;
set_real_ip_from 2405:b500::/32;
set_real_ip_from 2405:8100::/32;
set_real_ip_from 2a06:98c0::/29;
set_real_ip_from 2c0f:f248::/32;

real_ip_header CF-Connecting-IP;

# The following query to check the IP address country can be performed with the following settings:
# curl -s -H "X-Real-IP: 8.8.8.8" "ip.dns.com/country_name"      
# United States
# curl -s -H "X-Real-IP: 1.1.8.8" "ip.dns.com/country_name"
# China
map $remote_addr $ip_from_header_if_trusted {
        default       "";
        127.0.0.1     $http_x_real_ip;
        ALLOW_IP      $http_x_real_ip;
        ALLOW_IP      $http_x_real_ip;
}
map $ip_from_header_if_trusted $ip_to_check {
    default $ip_from_header_if_trusted;
    "" $remote_addr;
}